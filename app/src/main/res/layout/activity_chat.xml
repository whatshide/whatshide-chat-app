<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCream"
    tools:context=".ChatActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:id="@+id/back"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_centerVertical="true"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/random_profile"
            android:layout_toRightOf="@+id/back"
            android:layout_centerVertical="true"
            android:id="@+id/profile"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/profile"
            android:id="@+id/to_profile"
            android:background="?attr/selectableItemBackground">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="17dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/name" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="status"
                    android:textSize="12dp"
                    android:id="@+id/status"
                    android:textColor="@color/colorWhite"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:clipToPadding="false"
        android:layout_below="@+id/toolbar"
        android:layout_above="@id/message_panel"
        android:id="@+id/recyclerview"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4B000000"
        android:visibility="gone"
        android:id="@+id/cover"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:visibility="gone"
        android:clickable="true"
        android:id="@+id/selected_toolbar">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_close_24"
            android:background="?attr/selectableItemBackground"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:id="@+id/selected_close"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:baselineAligned="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_file_copy_24"
                android:padding="10dp"
                android:id="@+id/selected_copy"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_redo_24"
                android:padding="10dp"
                android:id="@+id/selected_forward"/>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@android:color/black"
        android:id="@+id/selected_image">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="?attr/actionBarSize"
            android:clipToPadding="false"
            android:paddingBottom="60dp"
            android:id="@+id/selected_image_recycler_view"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:background="#9E000000"
            android:id="@+id/selected_image_toolbar">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:padding="10dp"
                android:visibility="visible"
                android:layout_gravity="center_vertical"
                android:id="@+id/selected_image_back"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To somesh"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:id="@+id/selected_image_name"/>
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_panel"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_bar"
            android:paddingTop="1dp"
            android:paddingBottom="3dp"
            android:layout_marginTop="5dp"
            android:elevation="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/search_bg"
            android:layout_toLeftOf="@id/send"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_image_24"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/search_bg"
                android:id="@+id/image_select"/>

            <EditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/image_select"
                android:background="@drawable/search_bg"
                android:hint="Message"
                android:paddingTop="8dp"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="10dp"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/send"
            android:layout_alignParentRight="true"
            android:id="@+id/send"
            android:elevation="2dp"
            android:layout_centerVertical="true"
            android:background="@drawable/accent_bg"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingStart="13dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="5dp"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/message_panel"
        android:text="seen"
        android:visibility="gone"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/message_status"
        android:layout_marginEnd="2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/open_image_container"
        android:visibility="gone"
        android:background="@android:color/black">
        <com.github.chrisbanes.photoview.PhotoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/random_profile"
            android:id="@+id/open_image_view"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#B2000000">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:id="@+id/open_image_back"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/open_image_back"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:id="@+id/open_image_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date"
                    android:id="@+id/open_image_date"
                    android:textSize="10dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_rotate_right_24"
            android:layout_alignParentRight="true"
            android:background="@drawable/search_bg"
            android:layout_alignParentBottom="true"
            android:layout_margin="40dp"
            android:id="@+id/rotate"
            android:padding="10dp"/>
    </RelativeLayout>
</RelativeLayout>